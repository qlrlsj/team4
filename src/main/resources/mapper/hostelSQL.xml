<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="hostel">

<insert id="insertHostel" parameterType="h" >
insert into hostel values(hostel_seq.nextval,#{memberNo},#{hostelName},#{hostelAddress},#{bookStart},#{bookEnd},#{CheckinOut},#{hostelIntro},#{hostelUsage},#{hostelType},#{hostelScore},#{hostelComfort},#{hostelService})
</insert>

<select id="hostelCode" resultType="int">
select max(hostel_code) from hostel
</select>

<insert id="insertFile" parameterType="hf">
insert into hostel_file VALUES(hostel_file_seq.nextval,#{hostelCode},#{filename},#{filepath})
</insert>

<insert id="insertOption" parameterType="ho">
insert into hostel_option values(hostel_option_seq.nextval,#{hostelCode},#{roomOption},#{hostelPrice},#{standardBooknum},#{maxBooknum},#{roomName})
</insert>

<select id="selectOptionNum" resultType="int">
select max(OPTION_NO) from hostel_option
</select>

</mapper>
